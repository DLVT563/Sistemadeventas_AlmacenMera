@model IEnumerable<Sistemadeventas_AlmacenMera.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Listado de Productos</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Agregar Producto
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.NombreProducto)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Precio)</th>
                <th>@Html.DisplayNameFor(model => model.Stock)</th>
                <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                <th>@Html.DisplayNameFor(model => model.FechaVencimiento)</th>
                <th>Categoría</th>
                <th>Proveedor</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreProducto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                        <td>@string.Format("{0:C}", item.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                        <td>@item.FechaCreacion?.ToString("dd/MM/yyyy")</td>
                        <td>@item.FechaVencimiento?.ToString("dd/MM/yyyy")</td>
                        <td>@item.IdCategoriaNavigation?.NombreCategoria</td>
                        <td>@item.IdProveedorNavigation?.NombreProveedor</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-warning btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-info btn-sm me-1 text-white">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-muted">No hay productos registrados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
