@model Sistemadeventas_AlmacenMera.Models.Producto

@{ 
    ViewData["Title"] = "Detalles del Producto";
}

@{
    var fotoProducto = string.IsNullOrEmpty(Model.FotoPath) ? string.Empty : Url.Content($"~/{Model.FotoPath}");
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detalles del Producto</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.NombreProducto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreProducto)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class="col-sm-9">
                    @string.Format("{0:C}", Model.Precio)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Stock)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Código de barras
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.CodigoBarras))
                    {
                        <span class="badge bg-secondary fs-6">@Model.CodigoBarras</span>
                    }
                    else
                    {
                        <span class="text-muted">Sin registro</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </dt>
                <dd class="col-sm-9">
                    @Model.FechaCreacion?.ToString("dd/MM/yyyy")
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.FechaVencimiento)
                </dt>
                <dd class="col-sm-9">
                    @Model.FechaVencimiento?.ToString("dd/MM/yyyy")
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Categoría
                </dt>
                <dd class="col-sm-9">
                    @Model.IdCategoriaNavigation?.NombreCategoria
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Proveedor
                </dt>
                <dd class="col-sm-9">
                    @Model.IdProveedorNavigation?.NombreProveedor
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Fotografía
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(fotoProducto))
                    {
                        <img src="@fotoProducto" alt="Imagen del producto" class="img-fluid rounded shadow-sm" style="max-height: 260px;" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen asignada</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver a la lista
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.IdProducto" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
        </div>
    </div>
</div>
